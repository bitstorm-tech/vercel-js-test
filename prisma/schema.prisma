generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Account {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  dealer    Boolean    @default(false)
  deals     Deal[]
  favorites Favorite[]
}

model Deal {
  id          Int        @id @default(autoincrement())
  owner       Account    @relation(references: [id], fields: [accountId])
  accountId   Int
  title       String
  description String
  category    String
  duration    String
  start       DateTime
  favorites   Favorite[]
}

model Favorite {
  account   Account @relation(fields: [accountId], references: [id])
  accountId Int
  deal      Deal    @relation(fields: [dealId], references: [id])
  dealId    Int

  @@id([accountId, dealId])
}
